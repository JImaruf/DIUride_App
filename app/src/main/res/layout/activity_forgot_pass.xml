<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context=".ForgotPassActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainlayoutt"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/forgotimgicon"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/reset_password"
            app:layout_constraintBottom_toTopOf="@+id/text7"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Enter your Email Address for reset Password."
            android:textColor="#C62828"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgotimgicon" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text7">


            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/emailForResetPass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/editback"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:gravity="center"
                    android:hint="Enter DIU Email"

                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textColorHint="#706868"


                    />

            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>


        <soup.neumorphism.NeumorphButton
            android:id="@+id/forgotBTN"
            android:layout_width="200dp"


            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Reset Password"


            android:textColor="@color/white"


            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:neumorph_backgroundColor="#9C1D1D"
            app:neumorph_inset="6dp"
            app:neumorph_shadowColorDark="#953737"
            app:neumorph_shadowColorLight="#702727"
            app:neumorph_shapeType="pressed">


        </soup.neumorphism.NeumorphButton>

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="monospace"

            android:padding="10dp"
            android:textAlignment="center"
            android:visibility="gone"
            android:text="An Reset Password Email sent to your account.Please Reset your Passwored through that email and try login again.Thanks!"
            android:textColor="@color/maincolor"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgotBTN" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/loginBTNf"
            android:layout_width="200dp"


            android:layout_height="65dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Log In Again"
            android:visibility="gone"
            android:textColor="@color/white"


            android:textSize="18sp"


            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msg"
            app:neumorph_backgroundColor="#1D9C6B"
            app:neumorph_inset="6dp"
            app:neumorph_shadowColorDark="#379571"
            app:neumorph_shadowColorLight="#277052"
            app:neumorph_shapeType="pressed">


        </soup.neumorphism.NeumorphButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>