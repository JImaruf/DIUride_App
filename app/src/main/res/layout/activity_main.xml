            <!--                   android:text="About Us"-->
            <!--                   android:textStyle="italic"-->
            <!--                   android:layout_marginLeft="20dp"-->

            <!--                   android:textSize="16sp"-->
            <!--                   android:textColor="@color/black"-->
            <!--/>-->
